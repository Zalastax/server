<div class="ui grid">
  <%= render(ThesisWeb.SharedView, "sidebar.html", items: user_sidebar_items(@conn, @user), active_item: "Submissions") %>
  <div class="twelve wide column">
    <div class="ui segment submissions">
      <h4><i class="<%= icon(:submissions) %>"></i> Submissions</h4>
      <%= for submission <- @submissions do %>
        <%= render(ThesisWeb.SubmissionView, "submission_table.html", conn: @conn, submission: submission, hide: [:author]) %>
      <% end %>
    </div>
  </div>
</div>